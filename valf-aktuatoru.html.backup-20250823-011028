  <script>
    // Wait for navbar module to be available
    function waitForNavbar() {
      return new Promise((resolve) => {
        if (window.Navbar && typeof window.Navbar.init === 'function') {
          resolve();
        } else {
          const checkInterval = setInterval(() => {
            if (window.Navbar && typeof window.Navbar.init === 'function') {
              clearInterval(checkInterval);
              resolve();
            }
          }, 50);
        }
      });
    }
  </script>
  
  <script>
</body>
</html>



