  <script>
    // Wait for navbar to be available
    async function waitForNavbar() {
      return new Promise((resolve) => {
        let attempts = 0;
        const maxAttempts = 10;
        
        function checkNavbar() {
          attempts++;
          
          const navbar = document.querySelector('.navbar-custom');
          const navbarToggler = document.querySelector('.modern-toggler');
          const navbarCollapse = document.querySelector('.navbar-collapse');
          
          if (navbar && navbarToggler && navbarCollapse) {
            console.log(`✅ Navbar elements found on attempt ${attempts}`);
            resolve();
          } else if (attempts < maxAttempts) {
            console.log(`⏳ Navbar check attempt ${attempts}: navbar=${!!navbar}, toggler=${!!navbarToggler}, collapse=${!!navbarCollapse}`);
            setTimeout(checkNavbar, 100);
          } else {
            console.error('❌ Navbar elements not found after maximum attempts');
            resolve();
          }
        }
        
        checkNavbar();
      });
    }

    // Load navbar and footer

    // AOS Animasyonlarını Başlat
    AOS.init({
      duration: 800,
      easing: 'ease-out-cubic',
      once: true,
      offset: 100
    });
  </script>
